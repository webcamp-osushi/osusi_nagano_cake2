<div class="container">
	<div class="row">

<h2>登録情報編集</h2>

<%= form_for(@customer) do |f| %>

<div class="form-group">
 <%= f.label :last_name, '姓' %>
 <%= f.text_field :last_name, class: 'form-control',placeholder:"姓" %>
 <%= f.label :first_name, '名' %>
 <%= f.text_field :first_name, class: 'form-control',placeholder:"名" %>
</div>

<div class="form-group">
 <%= f.label :last_name_kana, 'セイ' %>
 <%= f.text_field :last_name_kana, class: 'form-control',placeholder:"セイ" %>
 <%= f.label :first_name_kana, 'メイ' %>
 <%= f.text_field :first_name_kana, class: 'form-control',placeholder:"メイ" %>
</div>

<div class="form-group">
 <%= f.label :postal_cord, '郵便番号' %>
 <%= f.text_field :postal_cord, class: 'form-control',placeholder:"郵便番号" %>
</div>

<div class="form-group">
 <%= f.label :address, '住所' %>
 <%= f.text_field :address, class: 'form-control',placeholder:"住所" %>
</div>

<div class="form-group">
 <%= f.label :telephone_number, '電話番号' %>
 <%= f.text_field :telephone_number, class: 'form-control',placeholder:"電話番号" %>
</div>

<div class="form-group">
 <%= f.label :email, 'メールアドレス' %>
 <%= f.text_field :email, class: 'form-control',placeholder:"メールアドレス" %>
</div>


<div class="push">
	<%= f.submit "編集を完了する" %>
</div>

<% if customer_signed_in? && @customer.id == current_customer.id %>
        <%= link_to "退会",  leave_customer_path(current_customer), method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger" %>
<% end %>
<% end %>
</div>
</div>