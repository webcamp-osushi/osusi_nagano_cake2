<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "姓"%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label "名"%>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>

  <div class="field">
    <%= f.label "カナ"%>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label "カナ"%>
    <%= f.text_field :first_name_kana, autofocus: true,autocomplete: "first_name_kana"%>
  <div class="field">
    <%= f.label "郵便番号"%>
    <%= f.text_field :postal_cord, autofocus: true, autocomplete:"postal_cord" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete:"address" %>
  </div>
  
  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number"%>
</div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
