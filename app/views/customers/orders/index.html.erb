<div class="container">
	<div class="row">
		<h1>注文履歴一覧</h1>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>注文日</th>
					<th>配送先</th>
					<th>注文商品</th>
					<th>支払金額</th>
					<th>ステータス</th>
					<th>注文詳細</th>
				</tr>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
				<tr>
					<th><%= order.created_at.strftime('%Y/%m/%d')  %></th><%# 20xx/xx/xx表記%>
					<th>〒<%= order.postal_code %><br>
						<%= order.address %><br>
						<%= order.name %>
					</th>
					<th><% order.order_details.each do |o| %>
						<%= o.product.name %><br>
						<% end %>
					</th>
					
					<th><%= order.total_price %>円</th>
					<th><%= order.status %></th>
					<th><%= link_to "表示する", customers_order_path(order.id), { class: "btn btn-primary"} %></th>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>