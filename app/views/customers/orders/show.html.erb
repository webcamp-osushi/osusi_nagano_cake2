<div class="container">
	<div class="row">
		<h1>注文履歴詳細</h1>
		<p><%= link_to "注文一覧に戻る", customers_orders_path, {class: "btn btn-success" } %></p>
		<div class ="col-lg-9">
			<h3>注文情報</h3>
			<table class="table table-bordered">
				<tbody>
					<tr>
						<th>注文日</th>
						<td><%= @order.created_at.strftime("%Y年%m月%d日%H時%M分") %></td>
					</tr>
					<tr>
						<th>配送先</th>
						<td>〒<%= @order.postal_code %><br>
							<%= @order.address %><br>
							<%= @order.name %>
						</td>
					</tr>
					<tr>
						<th>支払方法</th>
						<td><%= @order._method %></td>
					</tr>
					<tr>
						<th>ステータス</th>
						<td><%= @order.status %></td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-lg-3">
			<h3>請求情報</h3>
			<table class="table table-bordered">
				<tbody>
					<tr>
						<th>商品合計</th>
						<td><%= @order.product_sum_price.ceil %>円</td><%#orderモデルで定義 %>
					</tr>
					<tr>
						<th>配送料</th>
						<%# 注文2000円以上で送料無料 %>
						<td><% if @order.product_sum_price.ceil <= 2000 %>
							<%= @order.shipping_cost %>円
							<% else %>
							<%= @order.shipping_cost = 0 %>円
							<% end %>
						</td>
					</tr>
					<tr>
						<th>ご請求額</th>
						<td><%= (@order.product_sum_price + @order.shipping_cost).ceil %>円</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8">
			<h3>注文内容</h3>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>商品</th>
						<th>単価(税込)</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @order.order_details.each do |order_detail| %>
					<tr>
						<td><%= order_detail.product.name %></td>
						<td><%= number_to_currency(BigDecimal(order_detail.product.price * BigDecimal("1.08")).ceil,:format => "%n%u", :unit => "円", strip_insignificant_zeros: true) %></td>
						<td><%= order_detail.amount %></td>
						<td>
							<%= order_detail.subtotal_price.ceil %>円</td><%#orderモデルに定義%>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

