<div class="container">

	<h2>配送先登録/一覧</h2>

	<div class="row">
		<div class="col-xs-11 col-xs-offset-1">

			<%= form_for @address, url:customers_addresses_path do |f| %>
				<table class="table">
						<tr>
							<th>郵便番号</th>
							<td><%= f.text_field :postal_code, class: "col-xs-4" %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td><%= f.text_field :address, class: "col-xs-8" %></td>
						</tr>
						<tr>
							<th>宛名</th>
							<td><%= f.text_field :name, class: "col-xs-4" %></td>
						</tr>
				</table>
						<%= f.submit "登録する", class: "btn btn-success" %>
			<% end %>
		</div>

			<div class="row">
				<div class="col-xs-11 col-xs-offset-1">
					<table class="table">
						<thead>
							<tr>
								<th>郵便番号</th>
								<th>住所</th>
								<th>宛名</th>
								<th></th>
							</tr>
						</thead>

						<tbody>
							<% @addresses.each do |address| %>

							<tr>
								<td><%= address.postal_code %></td>
								<td><%= address.address %></td>
								<td><%= address.name %></td>
								<td><%= link_to "編集する", edit_customers_address_path(address.id), class: "btn btn-primary" %>
									<%= link_to "削除する", customers_address_path(address.id), method: :delete, class: "btn btn-danger" %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
	</div>
</div>

