<div class="main">
  <div class="container">  <!-- この行を追加 -->
    <div class="row">      <!-- この行を追加 -->
      <div class="col-lg-4">
        <div class="bg-info col-auto">
          <h2>　管理者ログイン</h2>
        </div>
        <br>
        <div class="login-form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <br>
            <div class="field">
              <%= f.label :　　パスワード %>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <br>
            <br>
            <div class="login-btn center-block">
              <%= link_to 'ログイン', admins_root_path, class:"col-xs-4 btn-primary btn-lg " %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
