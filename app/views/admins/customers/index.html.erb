<p class="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <section class="customer-index">
        <h2>会員一覧</h2>
      　<table class="table table-striped">
          <thead>
            <tr>
              <th>会員ID　</th>
              <th>氏名　　　　</th>
              <th>メールアドレス　</th>
              <th>ステータス　</th>
            </tr>
          </thead>
          <tbody>
            <!-- customer each文挿入 -->
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td>
                  <%= link_to admins_customer_path(customer.id) do %>
                    <%= customer.last_name %><%= customer.first_name %>
                  <% end %>
                  </td>
                <td><%= customer.email %></td>
                <td>
                  <% if customer.is_deleted == "Invalid" %>
                    退会済み
                  <% elsif customer.is_deleted == "Available" %>
                    有効
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
    </div>
  </div>
</div>
