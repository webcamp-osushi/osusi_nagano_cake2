<h1>商品新規登録</h1>
<%= form_for(@product, url: {controller: "products", action: "create"}) do |f| %>
<div class= "img_area">
	<%= f.attachment_field :image %>
</div>
<div class= "product_text_area">
	<p>商品名</p><%= f.text_field :name %>
	<p>商品説明</p><%= f.text_area :introduction %>
	<p>ジャンル</p> <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
	<p>税抜き価格</p><%= f.text_field :price %>円
	<p>販売ステータス</p><%= f.select :is_active, [['販売中',true],['販売停止中',false]], { include_blank: '--選択してください--' } %>
</div>
<%= f.submit '新規登録' %>
<% end %>