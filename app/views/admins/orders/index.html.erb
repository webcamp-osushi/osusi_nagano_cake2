<p class="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <section class="customer-index">
        <h2>注文履歴一覧</h2>
      　<table class="table table-striped">
          <thead>
            <tr>
              <th>購入日時　</th>
              <th>購入者　　　　</th>
              <th>注文個数　</th>
              <th>注文ステータス　</th>
            </tr>
          </thead>
          <tbody>
            <!-- order each文挿入 -->
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= link_to edit_admins_order_path(order.id) do %>
                    <%= order.created_at %>
                  <% end %>
                </td>
                <td><%= order.name %></td>
                <td><%= order.amount %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
    </div>
  </div>
</div>
